extends layout

block content

    h1 Books
    p
      a.button(href='/book/new') Create New Book

    p
      | Filters 
      a(href='/book/all') All
      |  
      a(href='/book/overdue') Overdue
      |  
      a(href='/book/checked') Checked Out

    table
      thead
        tr
          th Title
          th Author
          th Genre
          th Year Released      
      tbody
        each book in books
          tr
            td
              a(href='/book/' + book.id) #{book.title}
            td #{book.author}
            td #{book.genre}
            td #{book.first_published}
