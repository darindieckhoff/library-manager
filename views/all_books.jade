extends layout

block content

    h1 Books
    p
      a.button(href='book/new') Create New Book

    include ./partials/_filters.jade

    table
      thead
        tr
          th Title
          th Author
          th Genre
          th Year Released      
      tbody
        each book in books
          tr
            td
              a(href='/book/' + book.id) #{book.title}
            td #{book.author}
            td #{book.genre}
            td #{book.first_published}
