extends layout

block content

    h1 Return Book
    p
      strong Book Title: 
      | #{loan.Book.title}
    p
      strong Loaned By: 
      | #{loan.Patron.first_name} #{loan.Patron.last_name}
    p
      strong Loaned On: 
      | #{loan.loaned_on}
    p
      strong Return By: 
      | #{loan.return_by}
    form(id="returnbook" action='/loan/' + loan.id, method='post')
      p
        label(for='returned_on') Returned on:
        input#returned_on(type='text', value=moment(Date.now()).format('YYYY-MM-DD'), name='returned_on')
      p
        input(type='submit', value='Return Book')
